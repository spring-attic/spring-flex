<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:flex="http://www.springframework.org/schema/flex"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
  			  http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
              http://www.springframework.org/schema/flex 
              http://www.springframework.org/schema/flex/spring-flex-1.0.xsd">
        
        <flex:remote-service ref="remoteBean1"/>
        
        <flex:message-broker id="remoteServiceBroker"/>
        
        <flex:remote-service message-broker="remoteServiceBroker" ref="remoteBean1" service-id="exportedRemoteBean1" 
        	channels="my-amf, my-secure-amf" include-methods="foo, bar" exclude-methods="baz, zoo"/>
        
        <bean id="remoteBean1" class="org.springframework.flex.messaging.config.RemoteServiceBeanDefinitionParserTests$Bean1"/>
                  
</beans> 