<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:flex="http://www.springframework.org/schema/flex"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
  			  http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
              http://www.springframework.org/schema/flex 
              http://www.springframework.org/schema/flex/spring-flex-1.5.xsd">
        
        <flex:message-broker id="remoteServiceBroker2" />
        
        <bean id="remoteBean2" class="org.springframework.flex.hibernate4.config.xml.RemotingDestinationBeanDefinitionDecoratorTests$Bean1">
        	<flex:remoting-destination/>
        </bean>
        
        <bean id="remoteBean3" class="org.springframework.flex.hibernate4.config.xml.RemotingDestinationBeanDefinitionDecoratorTests$Bean1">
        	<flex:remoting-destination message-broker="remoteServiceBroker2" destination-id="exportedRemoteBean3" 
        		channels="my-amf, my-secure-amf" include-methods="foo, bar" exclude-methods="baz, zoo" service-adapter="customAdapter1"/>
        </bean>
        
        <bean id="customAdapter1" class="org.springframework.flex.core.ManageableComponentFactoryBean">
        	<constructor-arg value="org.springframework.flex.hibernate3.config.xml.RemotingDestinationBeanDefinitionParserTests$TestAdapter"/>
        </bean>
                  
</beans>
